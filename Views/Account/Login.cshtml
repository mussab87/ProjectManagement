@using ProjectManagement.Ressources
@using Service.DataLayer
@model Service.DataLayer.ProjectManagement.ViewModels.LoginViewModel
@{
    ViewBag.Title = "تسجيل الدخول";
    
}
<div class="col-md-4"></div>
<div class="col-md-4 login-form">
    <h3>تسجيل دخول</h3>
    <div class="row">
        <div class="col-md-12">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, true, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <hr />
                    <div asp-validation-summary="All" class="alert alert-danger"></div>
                    @*if (!String.IsNullOrEmpty(ViewBag.ReturnMessage))
                    {
                        <div class="alert alert-danger">
                            <p>@ViewBag.ReturnMessage</p>
                        </div>
                    }*@

                    <div class="form-group">
                        <label class="col-md-6">@Resource.Username</label>
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.Username, new { Value = "", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-6">@Resource.Password</label>
                        <div class="col-md-6">
                            @Html.PasswordFor(m => m.Password, new { Value = "", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <hr />
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="submit" value="تسجيل دخول" class="btn btn-primary" style="background-color: #29504d !important; width: 300px;" />
                        </div>
                    </div>
                    <p>

                    </p>

                }
            </section>
        </div>
        <div class="col-md-4">
        </div>
    </div>
</div>
<script src="~/Scripts/jquery.validate.js"></script>

